{
  "name": "@noodle/db",
  "version": "0.1.0",
  "private": true,
  "description": "Noodle's Drizzle ORM database package",
  "license": "AGPL-3.0",
  "author": "Ahmed Elsakaan",
  "type": "module",
  "main": "./src/index.ts",
  "scripts": {
    "generate": "drizzle-kit generate:pg",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "pnpm run lint --fix",
    "pull": "drizzle-kit introspect:pg",
    "push": "drizzle-kit push:pg",
    "run-migrations": "tsx ./migrate.ts",
    "studio": "drizzle-kit studio",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@neondatabase/serverless": "^0.5.7",
    "@noodle/env": "workspace:^",
    "drizzle-orm": "^0.28.2",
    "drizzle-zod": "^0.5.0",
    "pg": "^8.11.2",
    "postgres": "^3.3.5",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@noodle/tsconfig": "workspace:^",
    "drizzle-kit": "^0.19.12",
    "eslint-config-noodle": "workspace:^",
    "tsx": "^3.12.7"
  },
  "volta": {
    "extends": "../../package.json"
  }
}
